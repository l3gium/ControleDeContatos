@model ContatoModel
@{
    ViewData["Title"] = "Criar Contato";
}

<div class="text-center">

    <h1 class="display-4">Criar contato</h1>

</div>

<form asp-controller="Contato" asp-action="Criar" method="post">
    <div class="form-group mt-4">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" asp-for="Nome" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group mt-4">
        <label for="email">Email</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Digite o email para contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group mt-4">
        <label for="celular">Celular</label>
        <input type="number" class="form-control" asp-for="Celular" placeholder="Digite o número de celular para contato">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Adicionar</button> 
    <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>