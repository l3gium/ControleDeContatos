@using ControleDeContatos.Enums
@model UsuarioModel
@{
    ViewData["Title"] = "Criar Usuário";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dissmiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}


@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert">X</button>
        @TempData["MensagemSucesso"]
    </div>
}


<div class="text-center">

    <h1 class="display-4">Criar contato</h1>

</div>

<form asp-controller="Usuario" asp-action="Criar" method="post">
    <!--Nome-->
    <div class="form-group mt-4">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" asp-for="Nome" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <!--Email-->
    <div class="form-group mt-4">
        <label for="email">Email</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Digite o email para contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <!--Login-->
    <div class="form-group mt-4">
        <label for="nome">Login</label>
        <input type="text" class="form-control" asp-for="Login" placeholder="Digite o login do usuário">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <!--Perfil-->
    <div class="form-group mt-4">
        <label for="celular">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="0">Selecione</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)

        <div class="form-group mt-4">
            <label for="senha">Senha</label>
            <input type="password" class="form-control" asp-for="Senha" placeholder="Digite a senha do usuário">
            @Html.ValidationMessageFor(x => x.Senha)
        </div>
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Adicionar</button> 
    <a class="btn btn-secondary btn-block" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</form>